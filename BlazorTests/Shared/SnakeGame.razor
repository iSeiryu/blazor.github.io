<Styled @bind-Classname="@snake">
    width: @(possibleContentWidth)px;
    height: @(possibleContentWidth)px;
</Styled>

<div id="snake_container" tabindex="0"
     @onkeydown="HandleInput"
     @ontouchstart="HandleTouchStart"
     @ontouchmove="HandleTouchMove"
     class="@snake"
     @ref="_container">
    <Canvas id="snake_canvas"
            width="@possibleContentWidth"
            height="@possibleContentWidth"
            class="@snake"
            @ref="_canvas"></Canvas>
</div>

@code{
    private string snake;

    [CascadingParameter]
    internal int possibleContentWidth { get; set; }
}
